<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_admin_status"
        android:layout_width="@dimen/dim_iv_size"
        android:layout_height="@dimen/dim_iv_size"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dim_iv_margin" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLock"
        android:layout_width="@dimen/dim_btn_width"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent"
        android:text="@string/str_lock"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnable"
        android:layout_width="@dimen/dim_btn_width"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnLock"
        android:textColor="@color/colorAccent"
        android:text="@string/str_enable"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDisable"
        android:layout_width="@dimen/dim_btn_width"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnEnable"
        android:textColor="@color/colorAccent"
        android:text="@string/str_disable"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_disclaimer_margin_bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/clr_text_disabled"
        android:text="@string/str_disclaimer"/>
</RelativeLayout>